@model ICollection<SocialLife.Web.ViewModels.Gallery.PhotosGalleryViewModel>

<div class="container">
    <div class="portfolioContainer">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-sm-6 col-lg-3 col-md-4 webdesign illustrator">
                    <div class="gal-detail thumb">
                        <a href="#" class="image-popup" title="Screenshot-1">
                            <img width="130" height="250" src="/PostAttachments/@item.Url" class="thumb-img" alt="work-thumbnail">
                        </a>
                        <h5 class="text-center">@item.PostTextContent</h5>
                        <div class="ga-border"></div>
                        <p class="text-muted text-center"><small>Likes(@item.PostLikesCount)</small></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
